<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MovieAnalyzer.MovieAnalyzerController">
   <children>
      <Button fx:id="btnBestRate" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#onBestRateClick" prefHeight="90.0" prefWidth="161.0" text="Best Rated Movies" />
      <Button fx:id="btnWorthIt" layoutX="220.0" layoutY="14.0" mnemonicParsing="false" onAction="#onWorthItClick" prefHeight="90.0" prefWidth="161.0" text="Most Worth It To Watch" />
      <Button fx:id="btnDirector" layoutX="425.0" layoutY="14.0" mnemonicParsing="false" onAction="#onDirectorClick" prefHeight="90.0" prefWidth="161.0" text="Your Top Director" />
      <Button fx:id="btnLongestMovie" layoutX="14.0" layoutY="118.0" mnemonicParsing="false" onAction="#onLongestMovieClick" prefHeight="90.0" prefWidth="161.0" text="Longest Movie" />
      <Button fx:id="btnNotWorthIt" layoutX="220.0" layoutY="118.0" mnemonicParsing="false" onAction="#onLeastWorthToWatch" prefHeight="90.0" prefWidth="161.0" text="Least Worth It to Watch" />
      <Button fx:id="btnLowestRated" layoutX="425.0" layoutY="118.0" mnemonicParsing="false" onAction="#onLowestRatedClick" prefHeight="90.0" prefWidth="161.0" text="Lowest Rated Movie" />
      <Label fx:id="lblTitle" alignment="CENTER" layoutX="181.0" layoutY="223.0" prefHeight="62.0" prefWidth="239.0" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Label fx:id="lblAnswer" alignment="CENTER" layoutX="165.0" layoutY="294.0" prefHeight="41.0" prefWidth="272.0" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
