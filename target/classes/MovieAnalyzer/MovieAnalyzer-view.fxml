<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MovieAnalyzer.MovieAnalyzerController">
   <children>
      <ImageView fitHeight="468.0" fitWidth="619.0" layoutX="-2.0" layoutY="-24.0" opacity="0.53" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@wp2878050.jpg" />
         </image>
      </ImageView>
      <Label layoutX="186.0" layoutY="4.0" text="Welcome to Movie Analyzer!">
         <font>
            <Font name="Arial" size="19.0" />
         </font>
         <textFill>
            <RadialGradient centerX="0.4889196675900277" centerY="0.6140142517814727" focusAngle="2.49" radius="0.7890173410404624">
               <stops>
                  <Stop>
                     <color>
                        <Color />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </RadialGradient>
         </textFill>
      </Label>
      <Label layoutX="150.0" layoutY="33.0" prefHeight="96.0" prefWidth="329.0" text="In this application you will be able to create a list of movies you have watched and understand what types of movies or genres you like the most/or you really dislike" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="17.0" />
         </font>
      </Label>
      <Label layoutX="44.0" layoutY="145.0" text="Movie Name">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <TextField fx:id="txtName" layoutX="16.0" layoutY="172.0" prefHeight="50.0" prefWidth="160.0" />
      <Label layoutX="266.0" layoutY="144.0" text="Length">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <TextField fx:id="txtLength" layoutX="213.0" layoutY="173.0" prefHeight="50.0" prefWidth="160.0" />
      <Label layoutX="391.0" layoutY="146.0" text="Rating(Enter as decimal)">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtRating" layoutX="403.0" layoutY="172.0" prefHeight="50.0" prefWidth="160.0" />
      <Label layoutX="166.0" layoutY="238.0" text="Genre">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <Label layoutX="377.0" layoutY="236.0" text="Director">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <TextField fx:id="txtDirector" layoutX="323.0" layoutY="272.0" prefHeight="50.0" prefWidth="160.0" />
      <Button fx:id="onEnter" layoutX="231.0" layoutY="369.0" mnemonicParsing="false" onAction="#onEnterClick" text="ENTER">
         <font>
            <Font size="21.0" />
         </font>
      </Button>
      <RadioButton fx:id="rbSciFi" layoutX="113.0" layoutY="263.0" mnemonicParsing="false" onAction="#getGenre" text="Sci Fi">
