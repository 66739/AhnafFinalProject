            <ToggleGroup fx:id="genre1" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="rbRomance" layoutX="113.0" layoutY="288.0" mnemonicParsing="false" onAction="#getGenre" text="Romance" toggleGroup="$genre1" />
      <RadioButton fx:id="rbDrama" layoutX="195.0" layoutY="263.0" mnemonicParsing="false" onAction="#getGenre" text="Drama" toggleGroup="$genre1" />
      <RadioButton fx:id="rbAction" layoutX="196.0" layoutY="288.0" mnemonicParsing="false" onAction="#getGenre" text="Action" toggleGroup="$genre1" />
