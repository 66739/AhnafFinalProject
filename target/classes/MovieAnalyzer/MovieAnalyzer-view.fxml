      <Label fx:id="lblGenre" layoutX="180.0" layoutY="337.0" prefHeight="17.0" prefWidth="57.0" />
      <TableView fx:id="table" layoutX="-5.0" layoutY="440.0" prefHeight="350.0" prefWidth="617.0">
        <columns>
          <TableColumn fx:id="NameColumn" prefWidth="139.0" text="Name" />
          <TableColumn fx:id="LengthColumn" prefWidth="109.0" text="Length" />
            <TableColumn fx:id="RatingColumn" prefWidth="98.0" text="Rating" />
            <TableColumn fx:id="GenreColumn" prefWidth="93.0" text="Genre" />
            <TableColumn fx:id="DirectorColumn" prefWidth="163.0" text="Director" />
        </columns>
      </TableView>
      <Button fx:id="btnOpenAnalyzer" layoutX="483.0" layoutY="382.0" mnemonicParsing="false" onAction="#onOpenAnalyzerClick" text="OPEN ANALYZER" />
