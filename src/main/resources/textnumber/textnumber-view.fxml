<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="550.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="textnumber.textnumberController">
   <children>
      <TextField fx:id="txtInput" layoutX="15.0" layoutY="11.0" prefHeight="60.0" prefWidth="423.0" />
      <Button fx:id="btnReverseText" layoutX="16.0" layoutY="83.0" mnemonicParsing="false" onAction="#onReverseTextClick" prefHeight="99.0" prefWidth="186.0" text="Reverse Text">
         <effect>
            <InnerShadow />
         </effect>
      </Button>
      <Button fx:id="btnCountVowel" layoutX="252.0" layoutY="83.0" mnemonicParsing="false" onAction="#onCountVowelClick" prefHeight="99.0" prefWidth="186.0" text="Count Vowels">
