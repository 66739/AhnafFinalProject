            <InnerShadow />
         </effect>
      </Button>
      <Button fx:id="btnDigitSum" layoutX="252.0" layoutY="190.0" mnemonicParsing="false" onAction="#onDigitSumClick" prefHeight="99.0" prefWidth="186.0" text="Digits Sum">
         <effect>
            <InnerShadow />
         </effect>
      </Button>
      <Button fx:id="btnReset" layoutX="151.0" layoutY="312.0" mnemonicParsing="false" onAction="#onResetClick" prefHeight="70.0" prefWidth="148.0" text="RESET">
