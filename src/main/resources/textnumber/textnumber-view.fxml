            <InnerShadow />
         </effect>
      </Button>
      <TextArea fx:id="txtOutput" layoutX="18.0" layoutY="400.0" prefHeight="127.0" prefWidth="417.0" />
      <Button fx:id="btnWordWork" layoutX="16.0" layoutY="190.0" mnemonicParsing="false" onAction="#onWordWorkClick" prefHeight="99.0" prefWidth="186.0" text="Open wordwork">
         <effect>
            <InnerShadow />
         </effect>
      </Button>
   </children>
</AnchorPane>
